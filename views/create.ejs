<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-md-5">
      <a href="/" class="btn btn-sm btn-primary mb-3">Back</a>
      <div class="card">
        <div class="card-header">
          <h1>Student Profile Create</h1>
        </div>
        <div class="card-body"></div>

        <form action="/product" enctype="multipart/form-data" method="post">
          <div class="my-3">
            <label for="">Name</label>
            <input type="text" class="form-control" name="name" />
          </div>

          <div class="my-3">
            <label for="">Age</label>
            <input type="text" class="form-control" name="age" />
          </div>

          <div class="my-3">
            <label for="">Skill</label>
            <input type="text" class="form-control" name="skill" />
          </div>

          <div class="my-3">
            <label for="">Gender</label>
           <input type="text" class="form-control" name="gender">
          </div>

          <div class="my-3">
            <label for="">Phone</label>
            <input type="text" class="form-control" name="phone" />
          </div>

          <div class="my-3">
            <label for="">Email</label>
            <input type="text" class="form-control" name="email" />
          </div>



          <div class="my-3">
            <label for="">Product Photo</label>
            <input
              class="userPhoto"
              type="file"
              class="form-control"
              name="productPhoto"/>
            <img style="width: 400px; height: 300px; margin: auto;" class="userPhotoPreview" alt="" />
          </div>

          <div class="my-3">
            <button type="submit" class="btn btn-sm btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
